// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  password  String
  name      String?
  role      String   @default("member")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks     Task[]
  deadlines Deadline[]
  links     Link[]

  @@map("users")
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String
  deadline    DateTime
  completed   Boolean  @default(false)
  project     String   @default("sia") // "sia" or "techno"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("tasks")
}

model Deadline {
  id          String   @id @default(cuid())
  title       String
  description String
  deadline    DateTime
  project     String   @default("sia")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("deadlines")
}

model Link {
  id          String   @id @default(cuid())
  title       String
  description String
  url         String
  type        String   // "canva" or "github"
  project     String   @default("sia")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("links")
}
